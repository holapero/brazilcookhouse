<h1>ALL the chefs I know about </h1>
<h2>Add a chef <%=link_to('New Chef', new_chef_path)%></h2>
<table>
  <thead>
    <th>Name</th>
    <th>Show</th>
    <th>Specialty</th>
     <th>Picture</th>
  </thead>  
  <tbody>
    <%@chef.each do |chef|%>
    <tr>
      <td><%= chef.name.humanize %></td>
      <td><%= chef.show %></td>
      <td><%= chef.specialty%></td>
      <td><%= image_tag chef.avatar %></td>
      <td><%= link_to('view', chef_path(chef.id) ) %></td>
      <td><%= link_to('edit', chef_path(chef.id))%></td>
      <td><%= link_to('delete',chef_path(chef.id), method: :delete, confirm: 'Are you sure')%></td>
    </tr>
    <%end%>
  </tbody>
</table>
